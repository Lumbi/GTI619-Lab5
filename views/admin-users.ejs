<!doctype html>
<html>
<head>
      <title>Authentication - Admin</title>
      <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
      <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
      <style>
              body { padding-top:80px; word-wrap:break-word; }
              table { width:100%; border-radius:10px; -webkit-border-radius: 10px; -moz-border-radius: 10px;  }
              th { background-color: #EEEEEE; padding:10px; }
              td { text-align:left; padding:10px; }
      </style>
</head>
<body>
<div class="container">

      <a href="/profile" class="btn btn-default btn-sm">Back</a>

      <div class="page-header text-center">
              <h1><span class="fa fa-anchor"></span> Users</h1>
      </div>

      <div class="row">

              <!-- LOCAL INFORMATION -->
              <div class="col-sm-6">
                      <div class="well">
                              <table>
                                <tr>
                                  <th>Email</th>
                                  <th>Group</th>
                                  <th>Locked</th>
                                  <th></th>
                                </tr>
                                <% for(var i=0; i<users.length; i++) {%>
                                <tr>
                                   <td><%= users[i].local.email %></td>
                                   <td><%= users[i].local.group %></td>
                                   <% if(users[i].local.locked == '2') { %>
                                   <td>No</td>
                                   <% } else { %>
                                   <td>Yes</td>
                                   <% } %>
                                   <td><a href="/profile/admin-users?id=<%= users[i].id%>" class="btn btn-default btn-sm">Edit</a></td>
                                <% } %>
                                  
                                </tr>
                              </table>
                      </div>
              </div>

      </div>
</div>
</body>
</html>